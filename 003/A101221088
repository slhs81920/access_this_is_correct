using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;
using System.Data.OleDb;

namespace data_test_2
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }
        string config = "Provider=Microsoft.ACE.OLEDB.12.0;Data Source=data_test.accdb";
        private void button1_Click(object sender, EventArgs e)
        {
             OleDbConnection con = new OleDbConnection(config);    //使用指定的連接字串，初始化 OleDbConnection 類別的新執行個體
            con.Open();                                           //開啟資料庫連接
            
            OleDbDataReader dr;
            OleDbDataAdapter dr2 = new OleDbDataAdapter();

           
            string search = "SELECT * FROM data_test WHERE 學號 = 'A101221004'";       //查詢
            string search1 = "INSERT INTO data_test ([學號],[姓名],[身分證字號])VALUES ('A101221006','郭小玉','S246813456')";
            OleDbCommand cmd = new OleDbCommand(search, con);                       //使用查詢文字和 OleDbConnection 來初始化 OleDbCommand 類別的新執行個體。
            OleDbCommand cmd1 = new OleDbCommand(search1, con); 
            dr = cmd.ExecuteReader();           //OleDbDataReader:從資料庫獲取行
            dr2.InsertCommand = new OleDbCommand(search1, con);
        
            int count = dr.FieldCount;          //FieldCount  取得目前資料列中的資料行數目。
            while (dr.Read())
            {
                string[] item = new string[count];
                for (int n = 0; n < count; n++)                     //用迴圈讀出每一行資料
                    textBox1.Text += dr[n].ToString() + "  ";
            }
            dr.Close();
//關閉 OleDbDataReader 物件         
            cmd.Dispose();              //釋放所使用的所有資源
            con.Close();                //關閉資料連接
        }
        
    }
}
